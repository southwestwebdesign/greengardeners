---
import Button from "../UI/Button.astro";
---
<div class="bg-green-600 p-2 md:p-4 rounded-lg shadow-lg text-white">
          <h2 class="text-3xl font-bold mb-6 mt-2 text-white text-center">Quick Contact Form</h2>
          
          <form id="contactForm" class="space-y-6" action="https://api.web3forms.com/submit" method="POST" onsubmit="this.replyto.value = this.email.value">
            <input type="hidden" name="access_key" value="b9c0b942-8616-4d70-97fb-92586262e729" />
            <input type="checkbox" name="botcheck" id="" style="display: none;">
            <input type="hidden" name="subject" value="The Green Gardeners Contact Form" />
            <input type="hidden" name="redirect" value="" />
            <input type="hidden" name="replyto">
            <input type="hidden" name="from_name" value="The Green Gardeners" />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="space-y-4">
                <div>
                  <label for="name" class="block text-sm font-medium mb-1">Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="text-gray-900 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
              
                <div>
                  <label for="email" class="block text-sm font-medium mb-1">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="text-gray-900 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
              </div>
              <div class="space-y-4">
            
                <div>
                  <label for="phone" class="block text-sm font-medium mb-1">Phone (optional)</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                    class="text-gray-900 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
                
                <div>
                  <label for="type" class="block text-sm font-medium mb-1">Job Location</label>
                  <input 
                    type="text" 
                    id="job-location" 
                    name="job-location"
                    class="text-gray-900 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium mb-1">How Can We Help?</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="text-gray-900 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>
            
            <div>
              <Button type="submit" variant="outline" class="w-full mb-2">
                Send Message
              </Button>
            </div>
          </form>
        </div>